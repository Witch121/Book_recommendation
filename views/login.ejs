<%- include("partials/header.ejs") %>
<body>
  <div class="container login">
    <h1>Login</h1>
    <form action="/login" method="POST">
      <input type="text" name="name_r" placeholder="Name" required>
      <input type="email" name="email" placeholder="Email" required>
      <input type="submit" value="Login" class="small">
      <button class="small"><a href="/">Back</a></button>
    </form>
    <div class="recomend_container">
      <% if (locals.message) { %>
        <p> <%= message %> </p>
      <% } %>
    </div>
  </div>
</body>
