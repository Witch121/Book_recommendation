<%- include("partials/header.ejs") %>
<body>
    <main>
    <div class="librarian_form">
        <% if (locals.newThink) { %>
          <div class="feedback">
            <h1> <%= newThink %> </h1>
            <button class="Link Btn"><a href="/books">Back</a></button>
          </div>
        <% } else if (locals.deleteThink) { %>
          <div class="feedback">
            <h1> <%= deleteThink %> </h1>
            <button class="Link Btn"><a href="/books">Back</a></button>
          </div>
        <% }else if (locals.updateThink){ %>
          <div class="feedback">
            <h1> <%= updateThink %> </h1>
            <button class="Link Btn"><a href="/books">Back</a></button>
          </div>
          <% }else if (locals.updateLoan){ %>
            <div class="feedback">
              <h1> <%= updateLoan %> </h1>
              <button class="Link Btn"><a href="/books">Back</a></button>
            </div>
          <% } else { %>
              <div class="modify_Book librarian area">
                <h1> Modify </h1>
                <% books.forEach(book => { %>
                  <form action="/update" method="POST">
                    <input type="hidden" name="id_books" value="<%= book.id_books %>">
                    <input type="hidden" name="id_authors" value="<%= book.id_authors %>">
                    <input type="text" name="title" value="<%= book.title %>" placeholder="Title">
                    <input type="text" name="author_name" value="<%= book.author_name %>" placeholder="Author">
                    <input type="number" name="publication_year" value="<%= book.publication_year %>" placeholder="Publication Year">
                    <input type="text" name="genre" value="<%= book.genre %>" placeholder="Genre">
                    <input type="submit" value="Update Book" class="small">
                  </form>
                <% }); %>
              </div>
          <% } %>
    </div>
  </main>
</body>
<%- include("partials/footer.ejs") %>