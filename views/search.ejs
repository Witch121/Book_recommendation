<%- include("partials/header.ejs") %>
<body>
  <div class="container search">
    <div class="searchForm">
      <h1>Welcome to the Book Library</h1>
      <form action="/searchGenre" method="GET">
        <input type="text" class="input text" name="genre" placeholder="Enter genre" required>
        <input type="submit" value="Search" class="btn-input small">
      </form>
    </div>
    <div class="searchForm">
      <form action="/searchAuthor" method="GET">
        <input type="text" class="input text" name="author" placeholder="Enter author" required>
        <input type="submit" value="Search" class="btn-input small">
      </form>
    </div>
    <div class="searchForm">
      <form action="/searchTitle" method="GET">
        <input type="text" class="input text" name="title" placeholder="Enter title" required>
        <input type="submit" value="Search" class="btn-input small">
      </form>
    </div>
    <div>
      <a href="/books" class="LinkAllBooks">View All Books</a>
    </div>
  </div>
</body>
