<%- include("partials/header.ejs") %>
<body>
  <div class="container">
    <% if (locals.genre) { %>
      <h1>Books in Genre: <%= genre %></h1>
      <% if (books.length > 0) { %>
        <table>
          <thead>
            <tr>
              <th>ID</th>
              <th>Title</th>
              <th>Author ID</th>
              <th>Publication Year</th>
              <th>Genre</th>
            </tr>
          </thead>
          <tbody>
            <% books.forEach(function(book) { %>
              <tr>
                <td><%= book.id_books %></td>
                <td><%= book.title %></td>
                <td><%= book.id_authors %></td>
                <td><%= book.publication_year %></td>
                <td><%= book.genre %></td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      <% } else { %>
        <p>No books found in this genre.</p>
      <% } %>
      <div class = "booksHandlerBtn">
        <button><a href="/searchBooks">Back</a></button>
        <button><a href="/booksLoan">Take a book</a></button>
      </div>
    <% } else if (locals.author_name) { %>
      <h1>Books by Author: <%= author_name %></h1>
      <% if (books.length > 0) { %>
        <table>
          <thead>
            <tr>
              <th>Title</th>
              <th>Author</th>
              <th>Publication Year</th>
            </tr>
          </thead>
          <tbody>
            <% books.forEach(function(book) { %>
              <tr>
                <td><%= book.book_title %></td>
                <td><%= book.author_name %></td>
                <td><%= book.publication_year %></td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      <% } else { %>
        <p>No books found by this author.</p>
      <% } %>
      <div class = "booksHandlerBtn">
        <button><a href="/searchBooks">Back</a></button>
        <button><a href="/booksLoan">Take a book</a></button>
      </div>
    <% } else if (locals.title) { %>
      <h1>Books with Title: <%= title %></h1>
      <% if (books.length > 0) { %>
        <table>
          <thead>
            <tr>
              <th>ID</th>
              <th>Title</th>
              <th>Author ID</th>
              <th>Publication Year</th>
              <th>Genre</th>
            </tr>
          </thead>
          <tbody>
            <% books.forEach(function(book) { %>
              <tr>
                <td><%= book.id_books %></td>
                <td><%= book.title %></td>
                <td><%= book.id_authors %></td>
                <td><%= book.publication_year %></td>
                <td><%= book.genre %></td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      <% } else { %>
        <p>No books found with this title.</p>
      <% } %>
      <div class = "booksHandlerBtn">
        <button><a href="/searchBooks">Back</a></button>
        <button><a href="/booksLoan">Take a book</a></button>
      </div>
    <% } else { %>
        <h1>List of Books</h1>
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Title</th>
          <th>Author ID</th>
          <th>Publication Year</th>
          <th>Genre</th>
        </tr>
      </thead>
      <tbody>
        <% books.forEach(function(book) { %>
          <tr>
            <td><%= book.id_books %></td>
            <td><%= book.title %></td>
            <td><%= book.id_authors %></td>
            <td><%= book.publication_year %></td>
            <td><%= book.genre %></td>
          </tr>
        <% }); %>
      </tbody>
      <div class = "booksHandlerBtn">
        <button><a href="/searchBooks">Back</a></button>
        <button><a href="/booksLoan">Take a book</a></button>
      </div>
  </div>
    </table>
    <% } %>
</body>
<%- include("partials/footer.ejs") %>