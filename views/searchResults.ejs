<%- include("partials/header.ejs") %>
<body>
  <div class="container results">
    <div class="books_table">
      <% if (locals.genre) { %>
        <h1>Books in Genre: <%= genre %></h1>
        <% if (books.length > 0) { %>
          <table>
            <thead>
              <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Author Name</th>
                <th>ID</th>
                <th>Year</th>
                <th>Genre</th>
              </tr>
            </thead>
            <tbody>
              <% books.forEach(function(book) { %>
                <tr>
                  <td><%= book.id_books %></td>
                  <td><%= book.title %></td>
                  <td><%= book.author_name %></td>
                  <td><%= book.id_authors %></td>
                  <td><%= book.publication_year %></td>
                  <td><%= book.genre %></td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        <% } else { %>
          <p>No books with this characteristic was found.</p>
        <% } %>
    </div>
    <div class="books_table">
      <% } else if (locals.author_name) { %>
        <h1>Books by Author: <%= author_name %></h1>
        <% if (books.length > 0) { %>
          <table>
            <thead>
              <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Author Name</th>
                <th>Year</th>
                <th>Genre</th>
              </tr>
            </thead>
            <tbody>
              <% books.forEach(function(book) { %>
                <tr>
                  <td><%= book.id_books %></td>
                  <td><%= book.title %></td> 
                  <td><%= book.author_name %></td>
                  <td><%= book.publication_year %></td>
                  <td><%= book.genre %></td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        <% } else { %>
          <p>No books found by this author.</p>
        <% } %>
    </div>
      <div class="books_table">
        <% } else if (locals.title) { %>
          <h1>Books with Title: <%= title %></h1>
          <% if (books.length > 0) { %>
            <table>
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Title</th>
                  <th>Author Name</th>
                  <th>ID</th>
                  <th>Year</th>
                  <th>Genre</th>
                </tr>
              </thead>
              <tbody>
                <% books.forEach(function(book) { %>
                  <tr>
                    <td><%= book.id_books %></td>
                    <td><%= book.title %></td>
                    <td><%= book.author_name %></td>
                    <td><%= book.id_authors %></td>
                    <td><%= book.publication_year %></td>
                    <td><%= book.genre %></td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          <% } else { %>
            <p>No books found with this title.</p>
          <% } %>
      </div>
      <div class="books_table">
        <% } else { %>
          <div class="head allBooks">
            <h1>List of Books</h1>
            <form action="/new" method="GET">
              <input type="submit" value="+" class="btn-input small">
          </form>
          <button class="Link Btn"><a href="/">Back</a></button>
          </div>
        <table>
          <thead>
            <tr>
              <th>ID</th>
              <th>Title</th>
              <th>Author Name</th>
              <th>Year</th>
              <th>Genre</th>
            </tr>
          </thead>
          <tbody>
            <% books.forEach(function(book) { %>
                <tr>
                    <td><%= book.id_books %></td>
                    <td><%= book.title %></td>
                    <td><%= book.author_name %></td>
                    <td><%= book.publication_year %></td>
                    <td><%= book.genre %></td>
                    <td>
                        <form action="/update_book" method="GET">
                            <input type="hidden" name="id_books" value="<%= book.id_books %>">
                            <button type="submit" class="btn-input small img">
                              <img src="/img/edit_icon.png" alt="Modify" class="button-img">
                            </button>
                        </form>
                    </td>
                    <td>
                        <form action="/delete" method="POST">
                            <input type="hidden" name="id_books" value="<%= book.id_books %>">
                            <button type="submit" class="btn-input small img">
                              <img src="/img/delete_icon.png" alt="Delete" class="button-img">
                            </button>
                        </form>
                      </td>
                    <td>
                      <form action="/loan" method="GET">
                        <input type="hidden" name="id_books" value="<%= book.id_books %>">
                        <button type="submit" class="btn-input small img">
                          <img src="/img/take_book_icon.png" alt="Loan the book" class="button-img">
                        </button>
                      </form>
                  </td>
                </tr>
            <% }); %>
        </tbody>
      </table>
      <% } %>
    </div>
    <div class = "booksHandlerBtn">
    </div>
  </div>
</body>
<%- include("partials/footer.ejs") %>