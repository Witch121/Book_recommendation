<%- include("partials/header.ejs") %>
<body>
  <div class="container results">
    <div class="books_table">
      <% if (locals.genre) { %>
        <h1>Books in Genre: <%= genre %></h1>
        <% if (books.length > 0) { %>
          <table>
            <thead>
              <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Author Name</th>
                <th>ID</th>
                <th>Year</th>
                <th>Genre</th>
              </tr>
            </thead>
            <tbody>
              <% books.forEach(function(book) { %>
                <tr>
                  <td><%= book.id_books %></td>
                  <td><%= book.title %></td>
                  <td><%= book.author_name %></td>
                  <td><%= book.id_authors %></td>
                  <td><%= book.publication_year %></td>
                  <td><%= book.genre %></td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        <% } else { %>
          <p>No books found in this genre.</p>
        <% } %>
    </div>
    <div class="books_table">
      <% } else if (locals.author_name) { %>
        <h1>Books by Author: <%= author_name %></h1>
        <% if (books.length > 0) { %>
          <table>
            <thead>
              <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Author Name</th>
                <th>Year</th>
                <th>Genre</th>
              </tr>
            </thead>
            <tbody>
              <% books.forEach(function(book) { %>
                <tr>
                  <td><%= book.id_books %></td>
                  <td><%= book.title %></td> 
                  <td><%= book.author_name %></td>
                  <td><%= book.publication_year %></td>
                  <td><%= book.genre %></td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        <% } else { %>
          <p>No books found by this author.</p>
        <% } %>
    </div>
      <div class="books_table">
        <% } else if (locals.title) { %>
          <h1>Books with Title: <%= title %></h1>
          <% if (books.length > 0) { %>
            <table>
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Title</th>
                  <th>Author Name</th>
                  <th>ID</th>
                  <th>Year</th>
                  <th>Genre</th>
                </tr>
              </thead>
              <tbody>
                <% books.forEach(function(book) { %>
                  <tr>
                    <td><%= book.id_books %></td>
                    <td><%= book.title %></td>
                    <td><%= book.author_name %></td>
                    <td><%= book.id_authors %></td>
                    <td><%= book.publication_year %></td>
                    <td><%= book.genre %></td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          <% } else { %>
            <p>No books found with this title.</p>
          <% } %>
      </div>
      <div class="books_table">
        <% } else { %>
          <h1>List of Books</h1>
        <table>
          <thead>
            <tr>
              <th>ID</th>
              <th>Title</th>
              <th>Author Name</th>
              <th>ID</th>
              <th>Year</th>
              <th>Genre</th>
            </tr>
          </thead>
        <tbody>
          <% books.forEach(function(book) { %>
            <tr>
              <td><%= book.id_books %></td>
              <td><%= book.title %></td>
              <td><%= book.author_name %></td>
              <td><%= book.id_authors %></td>
              <td><%= book.publication_year %></td>
              <td><%= book.genre %></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
      <% } %>
    </div>
    <div class = "booksHandlerBtn">
      <button class="Link Btn"><a href="/searchBooks">Back</a></button>
      <button class="Link Btn"><a href="/booksLoan">Take a book</a></button>
    </div>
  </div>
</body>
<%- include("partials/footer.ejs") %>